% Options
\newif\ifvSDMCdrawing
\DeclareOption{drawing}{\vSDMCdrawingtrue}
\ProcessOptions\relax

% Main packages
\usepackage{amsmath, amsthm, amssymb, amsfonts}
\usepackage[utf8]{inputenc}
\usepackage{mathtools}

% Display
\usetheme{CambridgeUS}
\usecolortheme{orchid}
\setbeamerfont{block body}{shape = \upshape}
\institute{\includegraphics[width = 0.2\textwidth]{vSDMC-logo.png}}
% spacing becomes weird if I remove % signs
\makeatletter
	\setbeamertemplate{footline}{
		\leavevmode%
		\hbox{%
			\begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{author in head/foot}%
				\usebeamerfont{author in head/foot}\insertshortauthor%~~\beamer@ifempty{\insertshortinstitute}{}{(\insertshortinstitute)}
			\end{beamercolorbox}%
			\begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{title in head/foot}%
				\usebeamerfont{title in head/foot}\insertshorttitle
			\end{beamercolorbox}%
			\begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,right]{date in head/foot}%
				\usebeamerfont{date in head/foot}\insertshortdate{}\hspace*{2em}
				\usebeamercolor[fg]{page number in head/foot}\usebeamerfont{page number in head/foot}\usebeamertemplate{page number in head/foot}\hspace*{2ex}
			\end{beamercolorbox}
		}%
		\vskip0pt%
	}
\makeatother
\beamertemplatenavigationsymbolsempty
\setlength{\parskip}{1em}

% Images and Diagrams
\usepackage{graphicx}
\ifvSDMCdrawing
	\usepackage[inline]{asymptote}
	\usepackage{tikz-cd}
	\usepackage{tikzducks}
\fi

% Referencing
\newcommand{\email}[1]{\href{mailto:#1}{\texttt{#1}}}

% Word emphasis
\newcommand{\boldalert}[1]{\alert{\textbf{#1}}}
\DeclareTextFontCommand{\vocab}{\color{blue}\bfseries\em}

% Boxes
\newtheorem{proposition}{Proposition}
\newtheorem{claim}{Claim}
\newtheorem{observation}{Observation}
\newtheorem{conjecture}{Conjecture}
\AtBeginEnvironment{conjecture}{
	\setbeamercolor{block title}{bg = beamer@blendedblue!75!black!60!white, fg = white}
}
\newtheorem{hypothesis}{Hypothesis}
\AtBeginEnvironment{hypothesis}{
	\setbeamercolor{block title}{bg = beamer@blendedblue!75!black!60!white, fg = white}
}
\newtheorem{exercise}{Exercise}
\newtheorem{question}{Question}
\AtBeginEnvironment{definition}{
	\setbeamercolor{block title}{bg = black!75!black, fg = white}
	\setbeamercolor{block body}{bg = black!5}
}
\newtheorem{remark}{Remark}
\AtBeginEnvironment{remark}{
	\setbeamercolor{block title}{bg = black!75!black, fg = white}
	\setbeamercolor{block body}{bg = black!5}
}
\setbeamercolor{qed symbol}{fg = black}

